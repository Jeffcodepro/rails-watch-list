<div class="container">
  <h1>Add a Movie to <%= @list.name %></h1>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie, label: "Choose a movie" %>
    <%= f.submit "Add Movie", class: "btn btn-primary" %>
    <%= link_to "Back to list", list_path(@list), class: "btn btn-secondary" %>
  <% end %>
</div>
