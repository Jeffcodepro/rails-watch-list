<nav class="navbar bg-body-tertiary">
  <div class="container-fluid">
    <i class="fa-solid fa-film"></i>
    <form class="d-flex">
      <p><%= link_to "My lists", lists_path, class: " text-decoration-none text-secondary me-4" %></p>
      <p><%= link_to "New list", new_list_path, class: "text-decoration-none text-secondary" %></p>
    </form>
  </div>
</nav>

<div class="card text-bg-dark mb-4">
  <%= image_tag 'https://img.freepik.com/fotos-gratis/auditorio-de-cinema-vazio-com-cadeiras_651396-2891.jpg?semt=ais_hybrid&w=740', style: "height: 400px;" %>
  <div class="card-img-overlay d-flex flex-column justify-content-center align-items-center text-center">
    <h4 class="card-title text-dark"><%= @list.name %></h5>
    <p class="card-text text-dark">Favorites</p>
  </div>
</div>

<div class="container">
  <div class="text-end">
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-success mt-3" %>
  </div>
  <% if @bookmarks.any? %>
  <div class="card" style="width: 24rem;">
    <% @bookmarks.each do |bookmark| %>
    <img src="..." class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"><strong><%= bookmark.movie.title %></strong> * <%= bookmark.movie.rating %> ‚≠ê </h5>
      <p class="card-text"><%= bookmark.movie.overview %></p>
      <div class="d-flex justify-content-between">
        <p><i class="fa-solid fa-quote-left"></i> <%= bookmark.comment %></p>
        <%= link_to "Delete", bookmark_path(bookmark),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "btn btn-sm btn-danger ms-2" %>
      </div>
    </div>
          <% end %>
  </div>
  <% else %>
    <p>No movies in this list yet.</p>
  <% end %>



</div>
